{
  "name": "ariana",
  "displayName": "Ariana - Debugging with AI",
  "description": "Debug your JS/TS/Python code effortlessly just by hovering it, or by asking AI.",
  "version": "0.11.2",
  "icon": "resources/logo.png",
  "engines": {
    "vscode": "^1.94.0"
  },
  "license": "BSD-3-Clause",
  "publisher": "dedale-dev",
  "keywords": [
    "debugging",
    "ai",
    "ai debugging",
    "typescript",
    "javascript",
    "nodejs",
    "python",
    "react"
  ],
  "categories": [
    "Other",
    "Debuggers",
    "AI",
    "Visualization"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/dedale-dev/ariana"
  },
  "type": "commonjs",
  "main": "./dist/extension.js",
  "activationEvents": [
    "workspaceContains:package.json",
    "onLanguage:javascript",
    "onLanguage:python",
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "ariana.openSidebar",
        "title": "Ariana: Open Sidebar",
        "icon": "$(debug-alt)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ariana-sidebar",
          "title": "Ariana",
          "icon": "resources/ariana.svg"
        }
      ]
    },
    "views": {
      "ariana-sidebar": [
        {
          "type": "webview",
          "id": "ariana.sidebarView",
          "name": "Ariana",
          "icon": "resources/ariana.svg",
          "contextualTitle": "Ariana"
        }
      ]
    }
  },
  "scripts": {
    "compile": "npm run check-types && node esbuild.js",
    "check-types": "npx tsc --noEmit",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "npx tsc --noEmit --watch --project tsconfig.json",
    "vscode:prepublish": "npm run package",
    "package": "npm run check-types && node esbuild.js --production"
  },
  "devDependencies": {
    "@types/node": "^22.13.1",
    "@types/vscode": "^1.94.0",
    "@typescript-eslint/eslint-plugin": "^8.23.0",
    "@typescript-eslint/parser": "^8.23.0",
    "@vscode/test-electron": "^2.4.1",
    "concurrently": "^9.1.2",
    "esbuild": "^0.25.0",
    "eslint": "^9.19.0",
    "fs-extra": "^11.3.0",
    "prettier": "^3.4.2",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@types/adm-zip": "^0.5.7",
    "@types/node-fetch": "2",
    "@types/ws": "^8.18.0",
    "adm-zip": "^0.5.16",
    "axios": "^1.8.4",
    "dotenv": "^16.4.7",
    "glob": "^11.0.1",
    "node-fetch": "2",
    "ws": "^8.18.0"
  }
}
